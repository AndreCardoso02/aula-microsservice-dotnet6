@model CartViewModel

@{
    ViewData["Title"] = "Cart";
}

@if (Model.CartHeader != null && Model.CartDetails.Count() > 0)
{
    <form method="post">
        <br />
        <input asp-for="CartHeader.UserId" hidden />
        <input asp-for="CartHeader.Id" hidden />
        <div>
            <div class="card border mt-4 container">
                <div class="card-header bg-dark text-light ml-0 row">
                    <div class="col-6">
                        <i class="fas fa-shopping-cart"></i> &nbsp;
                        Shopping Cart
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-warning btn-sm">
                            Continue shopping
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-none d-lg-block">
                        <div class="row text-info">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-5">
                                Product Details
                            </div>
                            <div class="col-lg-2">
                                Price
                            </div>
                            <div class="col-lg-2">
                                Count
                            </div>
                            <div class="col-lg-1"></div>
                        </div>
                    </div>
                    <hr />
                    @foreach (var item in Model.CartDetails)
                    {
                        <div class="row h-100">
                            <div class="row text-info">
                                <div class="col-4 col-md-2 text-center py-2">
                                    <img src="@item.Product.ImageUrl" class="rounded" width="100%" />
                                </div>
                                <div class="col-8 col-md-5">
                                    <h5>@item.Product.Name</h5>
                                    <div style="font-size:11px">
                                        @Html.Raw(item.Product.Description)
                                    </div>
                                </div>
                                <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                                    <span style="font-size:17px;">@string.Format("{0:c}", item.Product.Price)</span>
                                </div>
                                <div class="col-3 col-md-2">
                                    <span style="font-size:17px;">@item.Count</span>
                                </div>
                                <div class="col-2 col-md-1">
                                    <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                    <hr />
                    <div class="row">
                        <div class="col-6">
                            <span>Coupon:</span>
                            <input asp-for="CartHeader.CouponCode" />
                            <button type="submit" asp-action="ApplyCoupon" class="btn-success">
                                Apply
                            </button>
                        </div>
                        <div class="col-6">
                            <span class="text-danger" style="font-size: 21px;">
                                Purchase Amount: @(string.Format("{0:c}", Model.CartHeader.PurchaseAmount))
                                <br/>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-footer row">
                    <div class="col-6 col-md-3 offset-md-6"></div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Checkout" class="btn btn-success form-control">
                            <span>Checkout</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div>
        <p>Your Cart is Empty</p>
    </div>
}